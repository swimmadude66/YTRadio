{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*", "components/index"],
            "@modules/*": ["modules/*", "modules/index"],
            "@services/*": ["services/*", "services/index"]
        }
    },
    "exclude": [
        "../../node_modules",
    ]
}
